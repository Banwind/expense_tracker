<header>
  <!-- navigation -->
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <a class="navbar-brand" href="/">
        家庭的記帳本
      </a>
      <a href="./expenses/new" class="btn btn-secondary">新增一筆紀錄</a>
    </div>
  </nav>
  <div class="banner"></div>
</header>

<!-- search bar、sort function -->
<div class="col-sm-12">
  <div class="container search-bar">
    <div class="search-bar-outer" style="display: flex; justify-content: space-between;align-items: center;">
      <div class="search-bar-inner">
        <!-- 這裡放置搜尋功能的 HTML 內容 -->
        <form action="/search">
          <div class="input-group">
            <h4 class="mt-2">尋找餐廳：</h4>
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="" aria-describedby="search-button">
            <div class="input-group-append mt-1 ml-5" style="margin-left: 10px;">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
      <!-- 這裡放置排序功能的 HTML 內容 -->
      <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1"
          data-bs-toggle="dropdown" aria-expanded="false">
          Sort
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
          <li><a class="dropdown-item" href="/az">A -> Z</a></li>
          <li><a class="dropdown-item" href="/za">Z -> A</a></li>
          <li><a class="dropdown-item" href="/category">類別</a></li>
          <li><a class="dropdown-item" href="/region">地區</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>


<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-9 col-6 mx-auto">
      <div style="display: flex; flex-wrap: wrap;">
        {{#each restaurant}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="col-lg-4 col-md-6 mb-4">
            <img class="card-img-top" style="height:200px; width:300px" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <span style="font-size: 20px" class="card-title mb-1">{{this.name}}</span>
              <span>(⭐{{this.rating}})</span>
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2">{{this.category}}</i>
              </div>
            </div>
            <div style="display: flex; justify-content: flex-end;">
              <a href="./restaurants/{{this._id}}" style="display: inline-block; margin-right: 15px; "
                class="btn btn-secondary">detail</a>
              <a href="./restaurants/{{this._id}}/edit" style="display: inline-block; margin-right: 15px;"
                class="btn btn-secondary">edit</a>
              <form action="./restaurants/{{ this._id }}?_method=DELETE" method="POST"
                style="display: inline-block; margin-right: 20px;">
                <button type="submit" class="btn btn-danger">delete</button>
              </form>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>