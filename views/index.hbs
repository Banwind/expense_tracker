<div class="container">
  <div class="sort_section">
    <div class="dropdown">
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown"
        aria-expanded="false">
        選擇類別
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><a class="dropdown-item" href="/">全部</a></li>
        <li><a class="dropdown-item" href="/search/property">家居物業</a></li>
        <li><a class="dropdown-item" href="/search/transportation">交通出行</a></li>
        <li><a class="dropdown-item" href="/search/entertainment">休閒娛樂</a></li>
        <li><a class="dropdown-item" href="/search/food">餐飲食品</a></li>
        <li><a class="dropdown-item" href="/search/others">其他</a></li>
      </ul>
    </div>
  </div>
  <div class="cost_section">
    <span class="total_cost_text">總金額:</span>
    <span class="total_cost">{{total_cost}}</span>
  </div>

  <div class="record_list">
    {{#each records}}
    <div class="record">
      <div class="record_item">
        <div class="record_icon">
          <i class="{{{this.categoryId.icon}}} fa-3x"></i>
        </div>
        <div class="record_info">
          <h3 class="record_name">{{this.name}}</h3>
          <p class="record_date">{{this.date}}</p>
        </div>
        <div class="record_amount">
          <h2 class="record_price">{{this.amount}}</h2>
        </div>
      </div>
      <div class="record_actions">
        <a href="./records/{{this._id}}/edit" class="btn">修改</a>
        <form action="./records/{{this._id}}?_method=DELETE" method="post">
          <button type="submit" class="btn">刪除</button>
        </form>
      </div>
    </div>
    {{/each}}
  </div>
  <form action="/records/new" method="get">
    <button type="submit" class="btn btn-primary btn-lg rounded-0 mt-2">新增支出</button>
  </form>
</div>